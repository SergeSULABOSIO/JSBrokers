{% extends "template.ui.html.twig" %}

{% block classeActiveListe %}active{% endblock %}
{% block classeOpenListe %}menu-open{% endblock %}
{% block classeActiveListeAutomobiles %}active{% endblock %}

{% block appTitreRubrique %}{% endblock %}

{% block appCorps %}
	<div class="row">
		<div class="card m-2 p-0">
			<h5 class="card-header">
				<i class="fa-solid fa-car"></i>
				{{automobile.plaque}}
			</h5>
			<div class="card-body">
				<h6 class="card-subtitle mb-2 text-muted">
					<i class="fa-brands fa-stack-overflow"></i>
					Marque: {{automobile.marque}}
					/
					Modèl: {{automobile.model}}
					/
					Année de mise en circulation: {{automobile.annee}}
				</h6>
				<h6 class="card-subtitle mb-2 text-muted">
					<i class="fa-solid fa-truck-monster"></i>
					Valeur: {{automobile.monnaie.code}}
					{{automobile.valeur|number_format(2, ',', '.')}}
					/
					N° Chassis: {{automobile.chassis}}
				</h6>
				<p class="card-text">Client:
					{{automobile.entreprise.nom}}</p>
				<a class="btn btn-light btn-sm card-link" href="{{ path('automobile.list') }}">
					<i class="fa-solid fa-rectangle-list"></i>
					Retour à la liste
				</a>
				<span class="dropdown show">
					<a class="btn btn-light btn-sm dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<i class="fa-solid fa-screwdriver-wrench"></i>
						Actions
					</a>

					<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
						<a class="dropdown-item" href="{{ path('automobile.edit', {id:automobile.id}) }}">
							<i class="fa-solid fa-pen-to-square"></i>
							Modifier
						</a>
						<a class="dropdown-item text-danger" href="{{ path('automobile.delete', {id:automobile.id}) }}">
							<i class="fa-solid fa-trash-can"></i>
							Supprimer
						</a>
					</div>
				</span>
			</div>
		</div>
	</div>
{% endblock %}
