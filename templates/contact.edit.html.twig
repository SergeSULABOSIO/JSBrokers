{% extends "template.ui.html.twig" %}

{% block classeActiveListe %}active{% endblock %}
{% block classeOpenListe %}menu-open{% endblock %}
{% block classeActiveListeContacts %}active{% endblock %}

{% block appTitreRubrique %}
	<i class="fa-solid fa-address-book"></i>
	{{appTitreRubrique}}
{% endblock %}

{% block appCorps %}
	{{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}
	<div class="container">
		<div class="card">
			<h5 class="card-header">Information générale</h5>
			<div class="card-body">
				<p class="card-text">
					<div class="row">
						<div class="col-sm">{{ form_row(form.nom) }}</div>
						<div class="col-sm">{{ form_row(form.poste) }}</div>
						<div class="col-sm">{{ form_row(form.telephone) }}</div>
						<div class="col-sm">{{ form_row(form.email) }}</div>
						
					</div>
					<div class="row">
						<div class="col-sm">{{ form_row(form.client) }}</div>
						<div class="col-sm">{{ form_row(form.entreprise) }}</div>
						<div class="col-sm"></div>
						<div class="col-sm"></div>
					</div>
				</p>
				<p class="card-text">
					{{ form_rest(form) }}
				</p>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script>
		$(document).ready(function () {
$('.select2').select2();
});
	</script>
{% endblock %}
