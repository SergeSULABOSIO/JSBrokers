{% extends "template.ui.html.twig" %}

{% block classeActiveListe %}active{% endblock %}
{% block classeOpenListe %}menu-open{% endblock %}
{% block classeActiveListeContacts %}active{% endblock %}

{% block appTitreRubrique %}{% endblock %}

{% block appCorps %}
	<div class="row">
		<div class="card m-2 p-0">
			<h5 class="card-header">
				<i class="fa-solid fa-address-book"></i>
				{{contact.nom}}
			</h5>
			<div class="card-body">
				<div class="card-subtitle mb-2 text-muted">
					<i class="fa-solid fa-phone"></i>
					Téléphone: {{contact.telephone}}
				</div>
				<div class="card-subtitle mb-2 text-muted">
					<i class="fa-solid fa-envelope-open-text"></i>
					Email: {{contact.email}}
				</div>
				<div class="card-subtitle mb-2 text-muted">
					<i class="fa-solid fa-people-roof"></i>
					Client: {{contact.client.nom}}
				</div>
				<p class="card-text">
					Poste: {{contact.poste}}
				</p>
				<a class="btn btn-light btn-sm card-link" href="{{ path('contact.list') }}">
					<i class="fa-solid fa-rectangle-list"></i>
					Retour à la liste
				</a>
				<span class="dropdown show">
					<a class="btn btn-light btn-sm dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<i class="fa-solid fa-screwdriver-wrench"></i>
						Actions
					</a>

					<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
						<a class="dropdown-item" href="{{ path('contact.edit', {id:contact.id}) }}">
							<i class="fa-solid fa-pen-to-square"></i>
							Modifier
						</a>
						<a class="dropdown-item text-danger" href="{{ path('contact.delete', {id:contact.id}) }}">
							<i class="fa-solid fa-trash-can"></i>
							Supprimer
						</a>
					</div>
				</span>
			</div>
		</div>
	</div>
{% endblock %}
